<?xml version="1.0" encoding="utf-8" ?>

<Dialog
  Rect="-1,-1,70,10"
  IsWarning="1">

  <Box
    Rect="3,1"
    Text="{Binding Title}"/>

  <Text
    Rect="5,-1,64"
    Centered="1"
    Text="{Binding Text}"/>

  <Text
    Rect="5,-1,64"
    Centered="1"
    Text="{Binding ObjectName}"/>

  <Text
    Rect="5,-1"
    Separator="1"/>

  <CheckBox
    Rect="5,-1"
    Text="{Resource MsgRememberChoice}"
    Selected="{Binding RememberChoice, Mode=TwoWay}"/>

  <Text
    Rect="5,-1"
    Separator="1"/>

  <Collection
    TypeOfItem="Button"
    Items="{Binding Buttons}"
    Orientation="0"
    StartPlace="0,-1"
        
    Button.CenterGroup="True"
    Button.ButtonClicked="onButtonClicked"/>

</Dialog>